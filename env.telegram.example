# Telegram Bot Configuration
# Get these values by creating a bot with @BotFather

# Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Channel ID (can be @channelname or numeric ID like -1001234567890)
TELEGRAM_CHANNEL_ID=@your_channel_name

# Enable/disable Telegram notifications
TELEGRAM_ENABLED=true

# Connection timeout settings (in seconds)
# Increase these if you have slow/unstable internet connection
TELEGRAM_CONNECT_TIMEOUT=30
TELEGRAM_READ_TIMEOUT=60
TELEGRAM_WRITE_TIMEOUT=60
TELEGRAM_POOL_SIZE=8
